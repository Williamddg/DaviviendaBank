<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blanco">

    <!-- Fondo gris lateral -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/fondo_gris" />

    <!-- imgPersonal -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardPersonal"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:cardCornerRadius="35dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="15dp">

        <ImageButton
            android:id="@+id/imgPersonal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/personal" />
    </androidx.cardview.widget.CardView>

    <!-- Texto Personal debajo de imgPersonal -->
    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Personal"
        android:textColor="@color/negro"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/cardPersonal"
        app:layout_constraintStart_toStartOf="@id/cardPersonal"
        android:layout_marginTop="8dp"
        android:gravity="center"/>

    <!-- imgEmpresario debajo de Personal -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardEmpresario"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:cardCornerRadius="35dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/textView21"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp">

        <ImageButton
            android:id="@+id/imgEmpresario"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/empresario" />
    </androidx.cardview.widget.CardView>

    <!-- Texto Empresario debajo de imgEmpresario -->
    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Empresario"
        android:textColor="@color/grismedio"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/cardEmpresario"
        app:layout_constraintStart_toStartOf="@id/cardEmpresario"
        android:layout_marginTop="8dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/txtUser2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="40dp"
        android:textColor="@color/negro"
        android:text="USUARIO"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtMisDatos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:textColor="@color/grismedio"
        android:text="Mis datos"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/txtUser2" />

    <View
        android:id="@+id/lineaHorizontal"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/grismedio"
        app:layout_constraintStart_toStartOf="@id/txtMisDatos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtMisDatos"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/txtMisDavipuntos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:text="Mis Davipuntos"
        android:textColor="@color/grismedio"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/lineaHorizontal" />

    <View
        android:id="@+id/lineaHorizontal2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/grismedio"
        app:layout_constraintStart_toStartOf="@id/txtMisDatos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtMisDavipuntos"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/txtAjustesSeguridad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:text="Ajustes de seguridad"
        android:textColor="@color/grismedio"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/lineaHorizontal2" />

    <View
        android:id="@+id/lineaHorizontal3"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/grismedio"
        app:layout_constraintStart_toStartOf="@id/txtMisDatos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtAjustesSeguridad"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/txtAyudaServicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:text="Ayuda y servicio"
        android:textColor="@color/grismedio"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/lineaHorizontal3" />

    <TextView
        android:id="@+id/txtCerrarSesion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="199dp"
        android:layout_marginTop="462dp"
        android:layout_marginEnd="28dp"
        android:text="Cerrar sesion"
        android:textColor="@color/grismedio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/lineaHorizontal3" />


</androidx.constraintlayout.widget.ConstraintLayout>
